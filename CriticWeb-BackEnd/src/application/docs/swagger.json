                },
                {
                  "message": "Field name cannot be empty."
                },
                {
                  "message": "Invalid field email. It must be a valid email."
                },
                {
                  "message": "Field email cannot be empty."
                },
                {
                  "message": "Invalid field password. It must be a string"
                },
                {
                  "message": "Invalid field password. It must be at least 8 characters and at most 20."
                },
                {
                  "message": "Field password cannot be empty."
                },
                {
                  "message": "Invalid field confirmPassword. It must be a string"
                },
                {
                  "message": "Invalid field confirmPassword. It must be at least 8 characters and at most 20."
                },
                {
                  "message": "Field confirmPassword cannot be empty."
                },
                {
